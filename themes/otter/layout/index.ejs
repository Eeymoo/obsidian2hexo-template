<!-- 简化版 About 页面 - 滚动检测自动跳转 + 底部滚动提示 -->
<div class="about-profile py-4">
  <!-- 头像（替换为你的头像链接） -->
  <img src="<%=theme.info.avatar%>" alt="<%= theme.title%>Avatar"
    class="about-avatar w-24 h-24 rounded-full mx-auto mb-4">

  <div class="about-meta text-center md:text-left">
    <h2 class="text-2xl font-bold text-gray-900 mb-2">
      <%=theme.info.author%>
    </h2>
    <p class="text-gray-600 mb-3"></p>
    <!-- 社交链接（按需添加） -->
    <div class="flex justify-center md:justify-start gap-4 mb-6">
      <% Object.keys(theme.info.icons).forEach(key=> { %>
        <a href="<%=theme.info.icons[key]%>" class="text-neutral hover:text-primary transition-colors" target="_blank">
          <i class="fa <%=key%> text-xl"></i>
        </a>
        <% }); %>
    </div>
  </div>
</div>

<div class="about-section my-6 py-2">
  <h3 class="text-xl font-semibold text-gray-800 mb-4 flex items-center gap-2">
    <i class="fa fa-info-circle text-primary/80"></i>
    About This Blog
  </h3>
  <% theme.info.abouts.forEach(about=> { %>
    <p class="text-gray-700 leading-relaxed mb-3">
      <%= about%>
    </p>
    <% }); %>
</div>

<div class="about-section my-6 py-2">
  <h3 class="text-xl font-semibold text-gray-800 mb-4 flex items-center gap-2">
    <i class="fa fa-code text-primary/80"></i>
    Skills & Interests
  </h3>
  <ul class="grid grid-cols-1 sm:grid-cols-2 gap-2 text-gray-700">
    <% theme.info.skills.forEach(skill=> { %>
      <li class="flex items-center gap-2">
        <i class="fa fa-check text-primary/70"></i>
        <%= skill%>
      </li>
      <% }); %>
  </ul>
</div>

<!-- 滚动提示 -->
<div class="scroll-hint text-center mt-12 mb-4 animate-bounce">
  <i class="fa fa-mouse-pointer text-primary text-xl mb-2"></i>
  <p class="text-gray-600">向下滚动查看文章 →</p>
</div>

<!-- 文章列表 -->
<div class="space-y-4">
  <% site.posts.sort('date', -1).limit(10).each(post=> { %>
    <!-- 单篇文章项：现代卡片样式 -->
    <div class="group py-5 bg-white rounded-xl hover:shadow-soft transition-all duration-300">
      <!-- 文章标题区域 -->
      <div class="mb-3">
        <a href="<%=url_for(post.path)%>"
          class="text-lg font-medium text-gray-800 hover:text-primary transition-colors duration-300 inline-block">
          <%=post.title%>
            <!-- 现代下划线效果：替代虚线边框 -->
            <span
              class="block w-full h-0.5 bg-primary/0 group-hover:bg-primary/20 transition-all duration-300 mt-1"></span>
        </a>
      </div>

      <!-- 日期信息：优化样式和排版 -->
      <time class="text-sm text-gray-500 flex items-center gap-1.5" datetime="<%=post.date.toJSON()%>">
        <i class="fa fa-calendar-o text-primary/70"></i>
        <%=date(post.date)%>
      </time>
    </div>
    <% }); %>
</div>
<!-- 简化样式 - 移除多余边框/阴影 -->
<style>
  .animate-bounce {
    animation: bounce 1.5s infinite;
  }

  @keyframes bounce {

    0%,
    100% {
      transform: translateY(0);
    }

    50% {
      transform: translateY(-8px);
    }
  }
</style>