<!-- 滚动检测 + 自动跳转脚本 -->
<script>
  // 标记是否已跳转，避免重复触发
  let hasRedirected = false;


  // 滚动事件处理函数
  function handleScrollToBottom() {
    // 仅在未跳转且滚动到底部时触发
    if (!hasRedirected && isScrollToBottom()) {
      hasRedirected = true; // 标记为已跳转

      // 移除滚动事件监听器，避免重复触发
      window.removeEventListener('scroll', handleScrollToBottom);

      // 添加平滑过渡动画
      document.documentElement.style.transition = 'all 0.6s ease-out';
      document.documentElement.style.opacity = '0';
      document.documentElement.style.transform = 'translateY(30px)';

      // 动画结束后跳转到指定页面
      setTimeout(() => {
        window.location.href = '<%=config.root%>archives';
      }, 500);
    }
  }

  // 判断是否滚动到底部的辅助函数
  function isScrollToBottom() {
    // 页面总高度 = 文档高度 - 视口高度
    const documentHeight = document.documentElement.scrollHeight;
    const viewportHeight = window.innerHeight;
    // 滚动条距离底部的距离（预留20px容错，避免因浏览器差异触发不灵敏）
    const scrollBottom = documentHeight - (window.scrollY + viewportHeight);
    // 当滚动到底部（距离底部<20px）时返回true
    return scrollBottom < 20;
  }

  // 添加滚动事件监听器
  window.addEventListener('scroll', handleScrollToBottom);
</script>

