<div class="tag-item group p-4 bg-white rounded-lg border border-gray-100 hover:shadow-sm transition-all duration-300">
  <a href="<%=url_for(article.path)%>" class="text-gray-800 hover:text-primary font-medium transition-colors duration-300">
    <%=article.title%>
  </a>
  <!-- 新增：文章摘要 -->
  <p class="text-sm text-gray-600 mt-2 line-clamp-2"><%=article.excerpt || 'No excerpt available'%></p>
  <time datetime="<%=date_xml(article.date)%>" class="block mt-2 text-sm text-gray-500 flex items-center gap-1.5">
    <i class="fa fa-calendar-o text-primary/70"></i>
    <%=date(article.date)%>
    <span class="mx-2 text-gray-300">•</span>
    <i class="fa fa-clock-o text-primary/70"></i>
    <%=Math.ceil((article.content || '').length / 500) || 1%> min read
  </time>
</div>